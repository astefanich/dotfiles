{
  "adapters": {
    "python-remote": {
      "port": "5678",
      "launch": {
        "remote": {
          "container": "TODO",
          "launchCommmand": [
            "python",
            "-m",
            "debugpy",
            "--listen",
            "0.0.0.0:5678",
            "%CMD%"
          ]
        }
      }
    }
  },
  "configurations": {
    "remote-attach": {
      "adapter": "python-remote",
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "Y"
        }
      },
      "remote-request": "attach",
      "configuration": {
        "request": "attach",
        "pathMappings": [
          {
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/TODO"
          }
        ]
      }
    }
  }
}
