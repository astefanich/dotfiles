{
    "coc.preferences.formatOnType": false,
    "codeLens.enable": true,
    "python.pythonPath": "$HOME/.pyenv/shims/python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pep8Enabled": false,
    "python.linting.mypyEnabled": true,
    "python.linting.pep8Path": "$HOME/.pyenv/shims/pep8",
    "python.linting.pylintArgs": [
        "--load-plugins=pylint_django",
        "--errors-only"
    ],
    "python.linting.prospectorEnabled": true,
    "python.formatting.provider": "autopep8",
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.stubPath": "typings",
    "python.venvPath": "$POETRY_VENV_HOME",
    "python.linting.prospectorPath": "$HOME/.pyenv/shims/prospector",
    "python.linting.pylintPath": "$HOME/.pyenv/shims/pylint",
    "python.linting.mypyPath": "$HOME/.pyenv/shims/mypy",
    "python.formatting.autopep8Path": "$HOME/.pyenv/shims/autopep8",
    "python.formatting.blackPath": "$HOME/.pyenv/shims/black",
    "pyright.organizeimports.provider": "pyright",
    "tsserver.enableJavascript": true,
    "tsserver.trace.server": "verbose",
    "tsserver.log": "normal",
    "javascript.referencesCodeLens.enable": false,
    "javascript.showUnused": false,
    "javascript.suggest.autoImports": true,
    "javascript.suggest.enabled": true,
    "javascript.suggestionActions.enabled": true,
    "typescript.referencesCodeLens.enable": false,
    "typescript.format.enabled": true,
    "typescript.suggestionActions.enabled": true,
    "eslint.format.enable" : false,
    "eslint.run": "onSave",
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "prettier.semi": false,
    "prettier.tabWidth": 2
}
